<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Always-available Console Appender (JSON) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <message/>
                <mdc/>
                <arguments/>
                <stackTrace/>
                <pattern>
                    <pattern>
                        {
                            "service": "cart-service",
                            "traceId": "%X{traceId:-}",
                            "spanId": "%X{spanId:-}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- Base root: console only (prevents warnings when Logstash is not configured) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Optional Logstash integration. Enable by activating the 'logstash' Spring profile
         and setting LOGSTASH_HOST/LOGSTASH_PORT environment variables. -->
    <springProfile name="logstash">
        <springProperty name="LOGSTASH_HOST" source="LOGSTASH_HOST" defaultValue=""/>
        <springProperty name="LOGSTASH_PORT" source="LOGSTASH_PORT" defaultValue="5000"/>

        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>${LOGSTASH_HOST}:${LOGSTASH_PORT}</destination>
            <keepAliveDuration>5 minutes</keepAliveDuration>
            <reconnectionDelay>5 seconds</reconnectionDelay>
            <writeBufferSize>8192</writeBufferSize>
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <timestamp/>
                    <logLevel/>
                    <loggerName/>
                    <message/>
                    <mdc/>
                    <arguments/>
                    <stackTrace/>
                    <pattern>
                        <pattern>
                            {
                                "service": "cart-service",
                                "environment": "${ENV:-development}",
                                "traceId": "%X{traceId:-}",
                                "spanId": "%X{spanId:-}"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
        </appender>

        <!-- When logstash profile is active, also send to LOGSTASH -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="LOGSTASH"/>
        </root>
    </springProfile>

    <logger name="com.sparkage" level="DEBUG"/>
</configuration>

