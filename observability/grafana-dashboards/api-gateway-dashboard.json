{
  "dashboard": {
    "id": null,
    "title": "API Gateway Performance Dashboard",
    "tags": ["api-gateway", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Gateway Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(gateway_requests_total[5m])",
            "legendFormat": "{{route}} - Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Route Latency Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_bucket{service=\"api-gateway\"}[5m])",
            "format": "heatmap",
            "legendFormat": "{{le}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "targets": [
          {
            "expr": "resilience4j_circuitbreaker_state",
            "legendFormat": "{{name}} - {{state}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Rate Limiter Status",
        "type": "graph",
        "targets": [
          {
            "expr": "resilience4j_ratelimiter_available_permissions",
            "legendFormat": "{{name}} - Available Permits"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Cache Hit Ratio",
        "type": "stat",
        "targets": [
          {
            "expr": "cache_gets_total{result=\"hit\"} / cache_gets_total",
            "legendFormat": "Cache Hit Ratio"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}

