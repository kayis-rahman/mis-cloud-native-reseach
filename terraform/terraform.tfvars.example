# GCP Project Configuration
gcp_project_id = "your-gcp-project-id"

# GHCR (GitHub Container Registry) Configuration
ghcr_owner = "your-github-username"  # Replace with your actual GitHub username/org
ghcr_token_secret_id = "ghcr-pat"
create_ghcr_secret = true
# ghcr_token = "your-ghcr-token-here"  # Set this via environment variable: export TF_VAR_ghcr_token="your_token"

# Database Configuration
db_username = "misadmin"

# Environment Configuration
environment = "development"

# Network Configuration
gcp_region = "us-central1"
network_cidr = "10.0.0.0/16"

# Kubernetes Configuration
k8s_namespace = "default"
create_k8s_db_secrets = true
